{
  "name": "fraidycat",
  "description": "Follow blogs, wikis, YouTube, Twitter, Reddit, Instagram and the like... from a distance.",
  "homepage": "https://fraidyc.at/",
  "bin": {
    "fraidycat-server": "src/js/server/main.js"
  },
  "productName": "Fraidycat",
  "author": {
    "name": "Kicks Condor",
    "email": "kicks@kickscondor.com"
  },
  "repository": {
    "url": "https://github.com/kickscondor/fraidycat"
  },
  "version": "1.1.5",
  "scripts": {
    "build": "npm run server:setup && node ./src/package.js build/server",
    "start": "node ./src/js/server/main.js",
    "start:firefox": "web-ext run --source-dir ./build/webext/",
    "test": "ava",
    "server:setup": "fsbin emptyDir build/server && cross-env STORAGE=server parcel build src/js/server/main.js --target node --bundle-node-modules -d build/server",
    "webext": "fsbin emptyDir build/webext && cross-env STORAGE=webext parcel build src/manifest.json --no-cache --no-source-maps -d build/webext",
    "webext:lint": "web-ext lint --source-dir ./build/webext/",
    "webext:safe": "find build/webext -type f -name '*.js' | xargs sed -i='' -e 's/Function(\"return this\")/function(){return this}/g' -e 's/\\([=: {]\\)Function(/\\1(function(){return function(){}})(/g'",
    "publish": "npm run electron:setup && electron-builder -wml -p always",
    "publish:windows": "npm run electron:setup && electron-builder -w -p always"
  },
  "assets": [
    {
      "source": "src/images/flatcat-32.*",
      "dest": "images"
    },
    {
      "source": "node_modules/uWebSockets.js/uws_${platform}_${arch}_${versions.modules}.node",
      "dest": "."
    },
    {
      "source": "node_modules/systray/traybin/tray_${platform}_release*",
      "dest": "."
    }
  ],
  "browserslist": "firefox >= 57, chrome >= 49",
  "dependencies": {
    "@kickscondor/elasticlunr": "^0.9.8",
    "deasync": "^0.1.20",
    "fraidyscrape": "^1.0.10",
    "json-date-parser": "^1.0.1",
    "nat-upnp": "^1.1.1",
    "ngrok": "^3.2.7",
    "node-fetch": "^2.6.0",
    "normalize-url": "^4.5.0",
    "open": "^7.2.1",
    "opml-generator": "^1.1.1",
    "regenerator-runtime": "^0.13.7",
    "selfsigned": "^1.10.8",
    "systray": "^1.0.5",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#binaries"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@kickscondor/emoji-button": "^2.1.4",
    "@kickscondor/router": "^0.7.3",
    "@kickscondor/umbrellajs": "^3.1.2",
    "ava": "^3.12.1",
    "cross-env": "^7.0.2",
    "decompress": "^4.2.1",
    "ent": "^2.2.0",
    "fast-json-patch": "^3.0.0-1",
    "fsbin": "^1.0.10",
    "hyperapp": "^1.2.9",
    "koalaesce": "^0.6.5",
    "node-sass": "^4.14.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-web-extension": "^1.6.1",
    "pkg": "github:geekuillaume/pkg",
    "sass": "^1.26.10",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0",
    "umzug": "^2.3.0",
    "web-ext": "^4.3.0",
    "webextension-polyfill": "^0.6.0"
  }
}
